<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="线路信息"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/route_detail_number"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/textView5"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="17dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/menu_ticket"
        android:layout_below="@+id/textView5"
        android:layout_toStartOf="@+id/route_detail_number"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/route_detail_price"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignStart="@+id/route_detail_number"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/ic_off_work_time"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/route_detail_time"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignStart="@+id/route_detail_price"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/route_detail_listview"
        android:layout_below="@+id/route_detail_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />
</RelativeLayout>