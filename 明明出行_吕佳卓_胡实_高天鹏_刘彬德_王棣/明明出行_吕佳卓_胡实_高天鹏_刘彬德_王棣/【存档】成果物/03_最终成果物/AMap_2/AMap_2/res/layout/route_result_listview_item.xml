<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/route_result_number"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@+id/route_result_arrow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/route_result_start_point"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView"
        android:layout_alignBaseline="@+id/route_result_arrow"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="â†’"
        android:textSize="65px"
        android:id="@+id/route_result_arrow"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/route_result_start_point"
        android:enabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/route_result_ending"
        android:layout_below="@+id/route_result_start_point"
        android:layout_toEndOf="@+id/route_result_arrow"
        android:layout_alignBaseline="@+id/route_result_arrow"
        android:layout_marginLeft="10dp" />

</LinearLayout>